BUILDDIR=build

SLIDES=$(BUILDDIR)/slides.html
PDF=$(BUILDDIR)/slides.pdf
REVEALJS=node_modules/reveal.js
DECKTAPE=node_modules/decktape
METADATA=metadata.yaml
DEPENDENCIES=slides.md $(METADATA) $(REVEALJS) $(DECKTAPE) $(BUILDDIR)

.PHONY: all
all: slides pdf

.PHONY:slides
slides: $(SLIDES)

.PHONY:pdf
pdf: $(PDF)

.PHONY:watch
watch:
	@echo 'Building...' && \
	make all && \
	fswatch \
		--exclude=$(BUILDDIR) \
		--one-per-batch \
		. \
	| \
	xargs -I {} sh -c 'echo Change detected. Building... && make && echo Build finished'

$(SLIDES): $(DEPENDENCIES)
	pandoc $< \
		--standalone \
		--from markdown+smart \
		--to revealjs \
		--filter pandoc-crossref \
		--citeproc \
		--metadata-file=$(METADATA) \
		--self-contained \
		--variable revealjs-url=./$(REVEALJS) \
		--variable theme="<%- theme %>" \
		--variable transition="<%- transition %>" \
		--variable slideNumber="<%- showSlideNumbers %>" \
		--variable showSlideNumber="<%- showSlideNumbers %>" \
		--output $@

$(PDF): $(DEPENDENCIES)
	./node_modules/decktape/decktape.js \
		--size='2048x1536' \
		$(SLIDES) \
		$(PDF)

$(REVEALJS) $(DECKTAPE):
	npm install

$(BUILDDIR):
	mkdir -p $(BUILDDIR)

.PHONY: clean
clean:
	@rm -rf $(BUILDDIR)

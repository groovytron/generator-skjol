{
    "compilerOptions": {
      "target": "es2022",
      "module": "esnext",
      "outDir": "generators",
      "rootDir": "src",
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "strict": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "src/*/templates",
      "test"
    ],
    "types": ["node", "yeoman-generator"]
  }

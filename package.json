{
  "name": "generator-skjol",
  "version": "3.1.0",
  "description": "Generator allowing you to scaffold documentation for your projects.",
  "files": [
    "generators"
  ],
  "type": "module",
  "exports": "generators",
  "scripts": {
    "build": "tsc",
    "postbuild": "copyfiles --all --up 1 'src/*/templates/**' generators && fix-esm-import-path generators",
    "dev": "c8 --all mocha",
    "test": "c8 mocha",
    "lint": "npm run prettier && npm run ejslint",
    "prettier": "prettier --check \"./src/**/*.ts\"",
    "ejslint": "ejslint \"src/*/templates/*.ejs\"",
    "format": "prettier --write \"./**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/groovytron/generator-skjol.git"
  },
  "keywords": [
    "yeoman",
    "yeoman-generator",
    "generator",
    "scaffolding",
    "boilerplate",
    "documentation",
    "kroki",
    "diagrams",
    "pandoc",
    "report",
    "latex",
    "markdown",
    "reveal",
    "slides",
    "presentation"
  ],
  "author": "Julien M'Poy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/groovytron/generator-skjol/issues"
  },
  "homepage": "https://github.com/groovytron/generator-skjol",
  "dependencies": {
    "chalk": "^5.2.0",
    "luxon": "^1.25.0",
    "yeoman-generator": "^5.7.0",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/js-yaml": "^4.0.5",
    "@types/luxon": "^3.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/sinon": "^10.0.13",
    "@types/yeoman-generator": "^5.2.11",
    "@types/yeoman-test": "^4.0.3",
    "@types/yosay": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "c8": "^7.12.0",
    "chai": "^4.3.7",
    "chai-files": "^1.4.0",
    "copyfiles": "^2.4.1",
    "ejs-lint": "^1.0.1",
    "eslint": "^6.8.0",
    "fix-esm-import-path": "^1.3.1",
    "js-yaml": "^4.0.1",
    "mocha": "^10.2.0",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "yeoman-environment": "^3.13.0",
    "yeoman-test": "^7.2.0"
  }
}

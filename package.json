{
  "name": "generator-skjol",
  "version": "2.0.0",
  "description": "Generator allowing you to scaffold documentation for your projects.",
  "files": [
    "generators"
  ],
  "type": "commonjs",
  "main": "generators/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nyc --all mocha --watch",
    "jest": "jest",
    "test": "nyc --all --reporter lcov mocha",
    "lint": "npm run prettier && npm run ejslint",
    "prettier": "prettier --check \"./generators/**/*.js\"",
    "ejslint": "ejslint \"generators/*/templates/*.ejs\"",
    "fix": "prettier --write \"./**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/groovytron/generator-skjol.git"
  },
  "keywords": [
    "yeoman",
    "yeoman-generator",
    "generator",
    "scaffolding",
    "boilerplate",
    "documentation",
    "kroki",
    "diagrams",
    "pandoc",
    "report",
    "latex",
    "markdown",
    "reveal",
    "slides",
    "presentation"
  ],
  "author": "Julien M'Poy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/groovytron/generator-skjol/issues"
  },
  "homepage": "https://github.com/groovytron/generator-skjol",
  "dependencies": {
    "chalk": "^4.1.0",
    "luxon": "^1.25.0",
    "yeoman-generator": "^5.7.0",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/jest": "^29.2.5",
    "@types/luxon": "^3.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/sinon": "^10.0.13",
    "@types/yeoman-generator": "^5.2.11",
    "@types/yeoman-test": "^4.0.3",
    "@types/yosay": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "chai": "^4.3.7",
    "chai-files": "^1.4.0",
    "ejs-lint": "^1.0.1",
    "eslint": "^6.8.0",
    "jest": "^29.3.1",
    "js-yaml": "^3.13.1",
    "mocha": "^10.2.0",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "yeoman-environment": "^3.13.0",
    "yeoman-test": "^7.2.0"
  }
}
